{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"complexity": [1, 10],
		"eqeqeq": [2, "allow-null"],
		"id-length": [2, { "min": 1, "max": 23 }],
		"max-depth": [2, 5],
		"max-statements": [1, 10],
		"max-statements-per-line": [2, { "max": 2 }],
		"no-extra-parens": [1],
		"no-implicit-coercion": [2, {
			"boolean": false,
			"number": false,
			"string": true
		}],
		"no-restricted-syntax": [2, "BreakStatement", "ContinueStatement", "DebuggerStatement", "LabeledStatement", "WithStatement"]
	}
}
